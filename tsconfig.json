{
   "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "types": ["node"],
      "jsx": "preserve",
      "lib": ["dom"],
      "noEmit": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "isolatedModules": true,
      "removeComments": false,
      "noImplicitThis": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "alwaysStrict": true,
      "strict": true,
      "inlineSourceMap": true,
      "baseUrl": "src",
      "paths": {
         "@*": ["*"]
      }
   },
   "include": ["./src/**/*"]
}
